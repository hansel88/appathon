<Page
    x:Class="ScrumApp.MainPage"
    IsTabStop="false"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScrumApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" Margin="0,30">
                <Button x:ConnectionId='6' x:Name="testButton" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="100" Content="detailStoryView"                           />
                <Button x:ConnectionId='7' x:Name="SprintViewTestButton" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="100" Content="SprintView"                                     />
                <Button x:ConnectionId='8' x:Name="AddUserStoryTestButton" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="100" Content="Add User Story view"                                     />
                <Button x:ConnectionId='9' x:Name="ShowAllProjectsTestButton" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="100" Content="Show All Projects view"                                  />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,30">
                <Button x:ConnectionId='1' x:Name="LoginViewTestButton" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="100" Content="Login view"                                     />
                <Button x:ConnectionId='2' x:Name="AddProjectViewTestButton" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="100" Content="Add project view"                                     />
                <Button x:ConnectionId='3' x:Name="AddUserTestButton" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="100" Content="Add User view"                                   />
                <Button x:ConnectionId='4' x:Name="DetailUserViewButton" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="100" Content="Detail User View"                                      />
                <Button x:ConnectionId='5' x:Name="AddSprintViewButton" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="100" Content="Add Sprint View"                                     />
            </StackPanel>
        </StackPanel>
        
        
    </Grid>
</Page>

