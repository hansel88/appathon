<UserControl
    x:Class="ScrumApp.Controls.PrivacyPolicyUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScrumApp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid Style="{StaticResource BasicFlyoutWrapperStyle}">
        <StackPanel Style="{StaticResource BasicFlyoutStyle}">
            <TextBlock Text="Privacy Policy" Style="{StaticResource SubheaderTextStyle}" />
            <TextBlock Style="{StaticResource BodyTextStyle}" Margin="0,10,0,0">
                All data is saved via Microsoft's online storage facilities. No data is sent to (or accessed by) the developers, 
                and is thus confidential. We appreciate your need for privacy in your projects, and would not like to breach that 
                trust in any way. For more information, or if you have questions, you can e-mail us.
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>

